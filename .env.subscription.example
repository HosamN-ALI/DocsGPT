# Subscription System Environment Variables
# Copy this file to .env and fill in your actual values

# Authentication Configuration
AUTH_TYPE=session_jwt  # Enable JWT authentication

# Stripe Configuration (REQUIRED)
# Get these from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Stripe Webhook Secret (after creating webhook endpoint)
# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_signing_secret_here

# JWT Configuration (Optional - defaults provided)
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hour
JWT_REFRESH_TOKEN_EXPIRES=2592000  # 30 days

# Password Security (Optional - defaults provided)
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGIT=true
PASSWORD_REQUIRE_SPECIAL=true

# Token Cost Markup (Optional - defaults to 5%)
TOKEN_COST_MARKUP_PERCENTAGE=5.0

# Email Configuration (Optional - for email verification/password reset)
SMTP_HOST=
SMTP_PORT=
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=

